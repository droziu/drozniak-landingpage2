// Eksportuj również funkcje pomocnicze (jeśli są używane w TrainingPage)
export const findLesson = (lessonId: string): Lesson | undefined => {
  for (const module of trainingModulesCatering) {
    const lesson = module.lessons.find(l => l.id === lessonId);
    if (lesson) return lesson;
  }
  return undefined;
};

export const getTotalLessons = (): number => {
  return trainingModulesCatering.reduce((sum, module) => sum + module.lessons.length, 0);
};

export const getNextLesson = (currentLessonId: string): Lesson | null => {
  for (let i = 0; i < trainingModulesCatering.length; i++) {
    const module = trainingModulesCatering[i];
    const lessonIndex = module.lessons.findIndex(l => l.id === currentLessonId);
    
    if (lessonIndex !== -1) {
      // Następna lekcja w tym samym module
      if (lessonIndex < module.lessons.length - 1) {
        return module.lessons[lessonIndex + 1];
      }
      // Następna lekcja w następnym module
      if (i < trainingModulesCatering.length - 1) {
        return trainingModulesCatering[i + 1].lessons[0];
      }
    }
  }
  return null;
};

export const getPreviousLesson = (currentLessonId: string): Lesson | null => {
  for (let i = 0; i < trainingModulesCatering.length; i++) {
    const module = trainingModulesCatering[i];
    const lessonIndex = module.lessons.findIndex(l => l.id === currentLessonId);
    
    if (lessonIndex !== -1) {
      // Poprzednia lekcja w tym samym module
      if (lessonIndex > 0) {
        return module.lessons[lessonIndex - 1];
      }
      // Poprzednia lekcja w poprzednim module
      if (i > 0) {
        const prevModule = trainingModulesCatering[i - 1];
        return prevModule.lessons[prevModule.lessons.length - 1];
      }
    }
  }
  return null;
};
